<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Mouvement.
    -->
    <changeSet id="20180610192832-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="compte_id"
                                 baseTableName="mouvement"
                                 constraintName="fk_mouvement_compte_id"
                                 referencedColumnNames="id"
                                 referencedTableName="compte"/>

        <addForeignKeyConstraint baseColumnNames="mouvements_id"
                                 baseTableName="mouvement_echeance"
                                 constraintName="fk_mouvement_echeance_mouvements_id"
                                 referencedColumnNames="id"
                                 referencedTableName="mouvement"/>
        <addForeignKeyConstraint baseColumnNames="echeances_id"
                                 baseTableName="mouvement_echeance"
                                 constraintName="fk_mouvement_echeance_echeances_id"
                                 referencedColumnNames="id"
                                 referencedTableName="echeance"/>
        
    </changeSet>
</databaseChangeLog>
